#include <iostream>
#include <string>
#include <sstream>
#include <vector>
#include <algorithm>
#include <map>
using namespace std;
int main()
{
    vector<string> vanban;
    string a, tmp;
    while (cin >> a)
    {
        for (int i = 0; i < a.size(); i++)
        {
            a[i] = tolower(a[i]);
        }
        vanban.push_back(a);
    }
    vanban[0][0] = toupper(vanban[0][0]);
    for (int i = 0; i < vanban.size(); i++)
    {
        int check = 0;
        for (int j = 0; j < vanban[i].size(); j++)
        {
            if (vanban[i][j] == '.' || vanban[i][j] == '?' || vanban[i][j] == '!')
            {
                check = 1;
                vanban[i][j] = '\0';
                cout << endl;
                if ((i + 1) < vanban.size())
                {
                    vanban[i + 1][0] = toupper(vanban[i + 1][0]);
                }
            }
            else
            {
                cout << vanban[i][j];
            }
        }
        if (check == 0)
        {
            cout << " ";
        }
    }
}
