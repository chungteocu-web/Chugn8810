#include <iostream>
#include <iomanip>
#include <algorithm>
#include <vector>
#include <string>
#include <sstream>
using namespace std;
int dem = 1;
struct SinhVien
{
    string masv, ten, malop;
    float mon1, mon2, mon3, tong;
};
bool sosanh(SinhVien a, SinhVien b)
{
    return a.masv < b.masv;
}
void sap_xep(SinhVien ds[], int n)
{
    sort(ds, ds + n, sosanh);
}
void in_ds(SinhVien ds[], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << i + 1 << " " << ds[i].masv << " " << ds[i].ten << " " << ds[i].malop << " " << fixed << setprecision(1) << ds[i].mon1 << " " << ds[i].mon2 << " " << ds[i].mon3 << endl;
    }
}
void nhap(SinhVien &a)
{
    cin.ignore();
    getline(cin, a.masv);
    getline(cin, a.ten);
    getline(cin, a.malop);
    cin >> a.mon1 >> a.mon2 >> a.mon3;
    a.tong = a.mon1 + a.mon2 + a.mon3;
}

int main(){
    int n;
    cin >> n;
    struct SinhVien *ds = new SinhVien[n];
    for(int i = 0; i < n; i++) {
    	nhap(ds[i]);
	}
	sap_xep(ds, n);
    in_ds(ds,n);
    return 0;
}
