#include <iostream>
#include <vector>
#include <algorithm>
#include <map>
using namespace std;
int main()
{
    int m;
    cin >> m;
    cin.ignore();
    while (m--)
    {
        int a, b;
        cin >> a >> b;
        vector<int> A(a);
        for (int i = 0; i < a; i++)
        {
            cin >> A[i];
        }
        int check = 1;
        for (int i = 0; i < a; i++)
        {
            if (A[i] == b)
            {
                cout << i + 1 << endl;
                check = 0;
                break;
            }
        }
        if (check == 1)
            cout << "-1" << endl;
    }
}
